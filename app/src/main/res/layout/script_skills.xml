<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/skills"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="@color/green"
    card_view:cardCornerRadius="10dp"
    card_view:contentPadding="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="@color/card_bg">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:text="@string/servantSkills"
            android:textSize="10pt"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="54dp"
            android:text="@string/servant1"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginTop="54dp"
            android:text="@string/servant2"
            card_view:layout_constraintStart_toEndOf="@+id/textView2"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginTop="54dp"
            android:text="@string/servant3"
            card_view:layout_constraintStart_toEndOf="@+id/textView3"
            card_view:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/btn_del"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="3dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/ic_close_white_24dp"
            android:contentDescription="@string/btn_del"/>

        <ImageButton
            android:id="@+id/btn_down"
            android:layout_width="40dp"
            android:layout_height="40dp"
            card_view:layout_constraintEnd_toStartOf="@+id/btn_del"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/ic_baseline_arrow_drop_down_24"
            android:contentDescription="@string/btn_down"/>

        <ImageButton
            android:id="@+id/btn_up"
            android:layout_width="40dp"
            android:layout_height="40dp"
            card_view:layout_constraintEnd_toStartOf="@+id/btn_down"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/ic_baseline_arrow_drop_up_24"
            android:contentDescription="@string/btn_up" />

        <Spinner
            android:id="@+id/skill_1_1"
            android:layout_width="76dp"
            android:layout_height="22dp"
            android:layout_marginStart="7dp"
            android:background="@color/card_bg"
            android:entries="@array/skl"
            android:prompt="@string/skill1"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Spinner
            android:id="@+id/skill_1_2"
            android:layout_width="76dp"
            android:layout_height="22dp"
            android:layout_marginStart="7dp"
            android:background="@color/card_bg"
            android:entries="@array/skl"
            android:prompt="@string/skill2"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/skill_1_1" />

        <Spinner
            android:id="@+id/skill_1_3"
            android:layout_width="76dp"
            android:layout_height="22dp"
            android:layout_marginStart="7dp"
            android:background="@color/card_bg"
            android:entries="@array/skl"
            android:prompt="@string/skill3"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/skill_1_2" />

        <Spinner
            android:id="@+id/skill_2_1"
            android:layout_width="76dp"
            android:layout_height="22dp"
            android:background="@color/card_bg"
            android:entries="@array/skl"
            android:prompt="@string/skill1"
            card_view:layout_constraintStart_toStartOf="@+id/textView3"
            card_view:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Spinner
            android:id="@+id/skill_2_2"
            android:layout_width="76dp"
            android:layout_height="22dp"
            android:background="@color/card_bg"
            android:entries="@array/skl"
            android:prompt="@string/skill2"
            card_view:layout_constraintStart_toStartOf="@+id/skill_2_1"
            card_view:layout_constraintTop_toBottomOf="@+id/skill_2_1" />

        <Spinner
            android:id="@+id/skill_2_3"
            android:layout_width="76dp"
            android:layout_height="22dp"
            android:background="@color/card_bg"
            android:entries="@array/skl"
            android:prompt="@string/skill3"
            card_view:layout_constraintStart_toStartOf="@+id/skill_2_2"
            card_view:layout_constraintTop_toBottomOf="@+id/skill_2_2" />

        <Spinner
            android:id="@+id/skill_3_1"
            android:layout_width="76dp"
            android:layout_height="22dp"
            android:background="@color/card_bg"
            android:entries="@array/skl"
            android:prompt="@string/skill1"
            card_view:layout_constraintStart_toStartOf="@+id/textView4"
            card_view:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Spinner
            android:id="@+id/skill_3_2"
            android:layout_width="76dp"
            android:layout_height="22dp"
            android:background="@color/card_bg"
            android:entries="@array/skl"
            android:prompt="@string/skill2"
            card_view:layout_constraintStart_toStartOf="@+id/skill_3_1"
            card_view:layout_constraintTop_toBottomOf="@+id/skill_3_1" />

        <Spinner
            android:id="@+id/skill_3_3"
            android:layout_width="76dp"
            android:layout_height="22dp"
            android:background="@color/card_bg"
            android:entries="@array/skl"
            android:prompt="@string/skill3"
            card_view:layout_constraintStart_toStartOf="@+id/skill_3_2"
            card_view:layout_constraintTop_toBottomOf="@+id/skill_3_2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>