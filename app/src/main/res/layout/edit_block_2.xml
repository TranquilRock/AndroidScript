<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="#333333"
    card_view:cardCornerRadius="15dp"
    card_view:contentPadding="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#484891">

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/block_name"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:gravity="center_vertical"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            card_view:layout_constraintEnd_toStartOf="@id/buttons"
            card_view:layout_constraintStart_toEndOf="@id/Title"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent">

            <include layout="@layout/edit_component_input"
                android:id="@+id/TwoVarLeftInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="10sp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintEnd_toStartOf="@id/TwoVarRightInput"/>

            <include layout="@layout/edit_component_input"
                android:id="@+id/TwoVarRightInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="16sp"

                card_view:layout_constraintBaseline_toBaselineOf="@id/TwoVarLeftInput"
                card_view:layout_constraintStart_toEndOf="@id/TwoVarLeftInput"
                card_view:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/buttons"
            layout="@layout/edit_component_switch" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>