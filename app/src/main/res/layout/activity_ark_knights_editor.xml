<!--    app:layout_constraintStart_toStartOf="@+id/set_service"-->
<!--    app:layout_constraintTop_toBottomOf="@+id/set_service"-->
    <Button
        android:id="@+id/set_script"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="開啟腳本"
        app:layout_constraintEnd_toEndOf="@+id/EatStone"
        app:layout_constraintStart_toStartOf="@+id/EatStone"
        app:layout_constraintTop_toBottomOf="@+id/EatStone"
         />

</androidx.constraintlayout.widget.ConstraintLayout>